{
  "name": "markdown-to-wechat",
  "displayName": "markdown-to-wechat",
  "description": "将Markdown转换为微信公众号兼容的HTML",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "markdown-to-wechat.previewMarkdown",
        "title": "微信公众号: 预览Markdown",
        "icon": {
          "light": "./media/icons/wechat-preview-light.svg",
          "dark": "./media/icons/wechat-preview-dark.svg"
        }
      },
      {
        "command": "markdown-to-wechat.selectTheme",
        "title": "微信公众号: 选择预览主题"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "markdown-to-wechat.previewMarkdown",
          "when": "editorLangId == markdown",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Markdown to WeChat",
      "properties": {
        "markdown-to-wechat.theme": {
          "type": "string",
          "default": "default",
          "description": "预览主题"
        },
        "markdown-to-wechat.fontSize": {
          "type": "string",
          "default": "16px",
          "description": "预览文本的字体大小",
          "enum": [
            "14px",
            "15px",
            "16px",
            "17px",
            "18px"
          ],
          "enumDescriptions": [
            "更小 (14px)",
            "稍小 (15px)",
            "推荐 (16px)",
            "稍大 (17px)",
            "更大 (18px)"
          ]
        },
        "markdown-to-wechat.headingNumberingStyle": {
          "type": "string",
          "default": "number-dot",
          "description": "标题编号",
          "enum": [
            "none",
            "number-dot",
            "chinese-dot"
          ],
          "enumDescriptions": [
            "不使用",
            "数字点形式 (1. 2. 3.)",
            "中文点形式 (一、二、三、)"
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "dev": "concurrently \"pnpm run watch\" \"cd webview-src && pnpm run watch\""
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "concurrently": "^8.2.2",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2"
  }
}
